---
import '/src/styles/theme.css';

const { lang, $t } = Astro.locals;
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={$t('description')} />
		<meta name="keywords" content="quote, citation, quote of the day, cloudflare workers, astro, ssr" />
		<meta name="author" content="Arnaud Dagnelies" />

		<title>{$t('title')}</title>    
	</head>
	<body>
		<slot></slot>
	</body>
</html>