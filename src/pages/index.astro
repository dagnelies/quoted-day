---
import * as quoteApi from "./api/quote.js";
import BaseLayout from "../layouts/BaseLayout.astro";

// fetch a quote and insert it server side
const t = Date.now();
const quote = await quoteApi.getQuote(Astro);
const dt = Date.now() - t;
---
<BaseLayout>
	<blockquote>
		<p id="quote">{quote.text}</p>
